<persistence version="1.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit name="##generated" >
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>

        <properties>
            <property name="datanucleus.ConnectionDriverName" value="org.hsqldb.jdbcDriver"/>
            <property name="datanucleus.ConnectionURL" value="jdbc:hsqldb:mem:jamsession"/>
            <property name="datanucleus.ConnectionUserName" value="sa"/>
            <property name="datanucleus.ConnectionPassword" value=""/>

            <property name="datanucleus.rdbms.dynamicSchemaUpdates" value="true"/>
            <property name="datanucleus.autoCreateSchema" value="true" />
            <property name="datanucleus.autoCreateTables" value="true" />
            <property name="datanucleus.autoCreateColumns" value="true" />
            <property name="datanucleus.autoCreateConstraints" value="true" />

        </properties>
    </persistence-unit>
</persistence>

